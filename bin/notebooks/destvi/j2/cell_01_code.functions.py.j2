def save_model(model_object, directory, name, suffix):#
#######################################################

	model_dir = join(directory, f"model_{name}_{suffix}")
	model_archive = join(model_dir, "model.pt")

	if exists(model_archive):
		remove(model_archive)

	if exists(model_dir):
		rmdir(model_dir)

	model_object.save(model_dir)
	############################################################################

